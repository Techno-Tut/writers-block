{
  "manifest_version": 3,
  "name": "Writers Block Assistant",
  "version": "1.0",
  "description": "AI-powered writing assistant for Salesforce Quip",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://*.quip.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://*.quip.com/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "dist/background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Writers Block Assistant"
  }
}
